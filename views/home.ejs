                aria-controls="navbarNav" aria-expanded="false" aria-label="Toggle navigation">
                <span class="navbar-toggler-icon"></span>
            </button>
            <div class="collapse navbar-collapse" id="navbarNav">
                <ul class="navbar-nav ml-auto">
                    <li class="nav-item"><a class="nav-link active" href="/"><i class="fas fa-home"></i> Home</a></li>
                    <li class="nav-item"><a class="nav-link" href="/schedule"><i class="fas fa-calendar-alt"></i>
                            Schedule</a></li>
                    <li class="nav-item"><a class="nav-link" href="/resourcesMainPage"><i class="fas fa-book"></i>
                            Resources</a></li>
                    <% if (user) { %>
                        <li class="nav-item"><a class="nav-link" href="/profile"><i class="fas fa-user"></i> Profile</a>

        <h1 style="text-align: center; margin-bottom:-20px ;">Add a resource</h1>
       <div id="form">
        <form action="/upload" method="post" enctype="multipart/form-data" style="background-color: #57ba98;">
            <label for="title">Title:</label>
            <input type="text" id="title" name="title" value="Put a title for the file" required>
    
            <label for="course">For:</label>
            <input type="text" id="course" name="course"   required list="coursesList">
            <datalist id="coursesList">
    
                <option value="a"></option>
                <option value="b"></option>
                
                
            </datalist>
    
            <label for="fileInput">Choose a file:</label>
            <input type="file" id="fileInput" name="fileInput" required>
    
            <button type="submit">Upload</button>
        </form>
       </div>
        


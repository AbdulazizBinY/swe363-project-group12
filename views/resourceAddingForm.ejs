        label {
            display: block;
            margin-bottom: 8px;
        }

        input, button {
            width: 100%;
            margin-bottom: 16px;
            padding: 8px;
            box-sizing: border-box;
        }

        button {
            background-color: #4caf50;
            color: white;
            border: none;
            border-radius: 4px;
            cursor: pointer;
        }

        button:hover {
            background-color: #45a049;
        }
